<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:layout_gravity="center"
            android:text="회원가입"
            android:textSize="30sp"
            android:fontFamily="@font/nanumbarunpenb"/>

        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.11"
            android:weightSum="1"
            android:orientation="horizontal">
            <TextView

                android:paddingLeft="10dp"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:text="ID :"
                android:textSize="30sp"
                android:fontFamily="@font/nanumbarunpenb"/>
            <EditText
                android:id="@+id/enroll_ID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:hint="가입할 ID를 입력하세요."
                android:paddingTop="10dp"
                android:fontFamily="@font/nanumbarunpenb"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.11"
            android:weightSum="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:paddingLeft="10dp"
                android:layout_weight="0"
                android:paddingRight="10dp"
                android:text="Password :"
                android:textSize="25sp"
                android:fontFamily="@font/nanumbarunpenb"/>
            <EditText
                android:id="@+id/edit_pwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:hint="비밀번호를 입력하세요."
                android:paddingTop="10dp"
                android:fontFamily="@font/nanumbarunpenb"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.11"
            android:weightSum="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:layout_weight="0"
                android:paddingRight="10dp"
                android:text="Address :"
                android:textSize="25sp"
                android:fontFamily="@font/nanumbarunpenb"/>
            <EditText
                android:id="@+id/enroll_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:paddingTop="10dp"
                android:hint="주소를 입력하세요."
                android:fontFamily="@font/nanumbarunpenb"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.11"
            android:weightSum="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:layout_weight="0"
                android:paddingRight="10dp"
                android:text="Gender :"
                android:textSize="25sp"
                android:fontFamily="@font/nanumbarunpenb"/>
            <EditText
                android:id="@+id/enroll_gender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:hint="성별을 입력하세요."
                android:paddingTop="10dp"
                android:fontFamily="@font/nanumbarunpenb"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >
            <Button
                android:id="@+id/enroll_enrollbutton"
                android:layout_marginTop="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원가입"/>
            <Button
                android:id="@+id/enroll_cancelbutton"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="취소"/>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>